{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "checkJs": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": [
        "lib/*"
      ],
      "$types/*": [
        "@types/*"
      ],
    }
  },
}